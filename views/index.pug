extends layout

block content
  h1= title
  //- p Welcome to #{title}
  form(action="/sendMail", method="POST")
    .form-group
      label(for='from') De:
      input#from.form-control(type='email', name="from" placeholder='De')
    .form-group
      label(for='to') Para:
      input#to.form-control(type='email', name="to" placeholder='Para')
    .form-group
      label(for='subject') Asunto:
      input#subject.form-control(type='text', name="subject" placeholder='Asunto')
    .form-group
      label(for='message') Mensaje:
      //- input#subject.form-control(type='email', placeholder='Para')
      textarea#message.form-control(rows='5', name="message", placeholder="Asunto")
    button.btn.btn-default(type='submit') Enviar correo
